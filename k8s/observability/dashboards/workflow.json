        "h": 8,
        "w": 8,
        "x": 0,
        "y": 19
      },
      "options": {
        "apiUrl": "http://localhost:8080",
        "projectId": "$project",
        "showDryRun": true,
        "showExecute": true,
        "confirmExecution": true,
        "refreshInterval": 10
      }
    },
    {
      "id": 14,
      "title": "Active Workflow Status",
